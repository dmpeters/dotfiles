
# PYTHONPATH ---
# export PYTHONPATH=/usr/local/share/python

# NODEPATH ---
# export NODEPATH=/usr/local/share/npm/bin

# RUBYPATH ---
# export RUBYPATH=/usr/local/Cellar/ruby/2.0.0-p247/bin

# PACKER ---
# export PACKER="/usr/local/packer"

# PATH ---
# export PATH=$PYTHONPATH:/usr/local/bin:/usr/local/sbin:$PATH
export PATH=/usr/local/bin:/usr/local/sbin:$PATH

# add your bin folder to the path, if you have it.
# It's a good place to add all your scripts
if [ -d ~/bin ]; then
	export PATH=:~/bin:$PATH
fi

# Homebrew's own bash completion script
if [ -f $(brew --prefix)/etc/bash_completion ]; then
	. $(brew --prefix)/etc/bash_completion
fi

# Language ---
export LANG=en_US.UTF-8

# virtualenvwrapper ---
export VIRTUALENV_DISTRIBUTE=true
export VIRTUALENVWRAPPER_PYTHON=/usr/local/bin/python
export VIRTUALENVWRAPPER_VIRTUALENV=/usr/local/bin/virtualenv
export VIRTUALENVWRAPPER_VIRTUALENV_ARGS='--no-site-packages --distribute'
export PROJECT_HOME=$HOME/Projects
export WORKON_HOME=$HOME/.virtualenvs
source /usr/local/bin/virtualenvwrapper_lazy.sh

# loads RVM ---
# [[ -s "/Users/dmpeters/.rvm/scripts/rvm" ]] && source "/Users/dmpeters/.rvm/scripts/rvm"

# loads EDITOR ---
export EDITOR='subl -w'
#export EDITOR='vim -w'

