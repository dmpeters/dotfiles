# Python ---
export PYTHONPATH=/usr/local/Cellar/python/2.7.3/bin:/usr/local/lib/python2.7/bin:/usr/local/lib/python2.7/site-packages:/usr/local/share/python:$PYTHONPATH

# Path ---
export PATH=$PYTHONPATH:/usr/local/Cellar/ruby/1.9.3-p194/bin:/usr/local/bin:/usr/local/sbin:$PATH

# add your bin folder to the path, if you have it.
# It's a good place to add all your scripts
if [ -d ~/bin ]; then
	export PATH=:~/bin:$PATH
fi

# Homebrew's own bash completion script
if [ -f $(brew --prefix)/etc/bash_completion ]; then
	. $(brew --prefix)/etc/bash_completion
fi

# Language ---
export LANG=en_US.UTF-8

# virtualenvwrapper ---
export WORKON_HOME=$HOME/.virtualenvs
export PROJECT_HOME=$HOME/Projects
export VIRTUALENVWRAPPER_VIRTUALENV_ARGS='--no-site-packages --distribute'
export VIRTUALENVWRAPPER_SCRIPT=/usr/local/share/python/virtualenvwrapper.sh
source /usr/local/share/python/virtualenvwrapper_lazy.sh

# loads RVM ---
# [[ -s "/Users/dmpeters/.rvm/scripts/rvm" ]] && source "/Users/dmpeters/.rvm/scripts/rvm"

# loads EDITOR ---
export EDITOR='subl -w'