# Path ----------------------------------------------------------------------------------------------------------------
export PATH=/usr/local/Cellar/python/2.7.3/bin:/usr/local/share/python:/usr/local/Cellar/ruby/1.9.3-p194/bin:/Users/dmpeters/pear/bin:/.cabal/bin:/usr/local/bin:/usr/local/sbin:$PATH

# add your bin folder to the path, if you have it.  It's a good place to add all your scripts
if [ -d ~/bin ]; then
	export PATH=:~/bin:$PATH
fi

# Python Path ---------------------------------------------------------------------------------------------------------
export PYTHONPATH=~/usr/local/Cellar/python/2.7.3/bin:/usr/local/share/python:$PYTHONPATH

# Python Path ---------------------------------------------------------------------------------------------------------
export NODE_PATH=~/usr/local/lib/node:/usr/local/lib/node_modules:$NODE_PATH

# Android -------------------------------------------------------------------------------------------------------------
export ANDROID_SDK_ROOT=/usr/local/Cellar/android-sdk/r20.0.1

# Language ------------------------------------------------------------------------------------------------------------
export LANG=en_US.UTF-8

# virtualenvwrapper ---------------------------------------------------------------------------------------------------
export WORKON_HOME=$HOME/.virtualenvs
export PROJECT_HOME=$HOME/Projects
export VIRTUALENV_USE_DISTRIBUTE=True
export VIRTUALENVWRAPPER_VIRTUALENV_ARGS='--no-site-packages'
source /usr/local/share/python/virtualenvwrapper.sh

# loads RVM -----------------------------------------------------------------------------------------------------------
[[ -s "/Users/dmpeters/.rvm/scripts/rvm" ]] && source "/Users/dmpeters/.rvm/scripts/rvm"


# loads EDITOR --------------------------------------------------------------------------------------------------------
#export EDITOR="mate -w"
#export EDITOR='subl -w'
export EDITOR='vim -w'

