# Other aliases ----------------------------------------------------
alias ll='ls -hl'
alias la='ls -a'
alias lla='ls -lah'

# OS-X SPECIFIC - the -G command in OS-X is for colors, in Linux it's no groups
alias ls='ls -G'
alias lsg='ls -g'

alias ..='cd ..'
alias cdd='cd -'
alias home='cd ~'
alias disk='cd /'
alias c='clear'

alias showinv='defaults write com.apple.finder AppleShowAllFiles TRUE && killall Finder'
alias hideinv='defaults write com.apple.finder AppleShowAllFiles FALSE && killall Finder'

# Misc aliases -----------------------------------------------------
alias gr='grep -i'  # Case insensitive grep
alias f='find . -iname'
alias ducks='du -cksh * | sort -rn|head -11' # Lists folders and files sizes in the current folder
alias tu='top -o cpu' # cpu
alias tm='top -o vsize' # memory
alias systail='tail -f /var/log/system.log'
alias m='more'
alias df='df -h'

# utility
alias reload='source ~/Projects/dotfiles/bash/aliases'
alias resource='source ~/Projects/dotfiles/bash/env'

# apache2
alias a2restart='sudo apachectl restart'
alias a2start='sudo apachectl start'
alias a2stop='sudo apachectl stop'
alias a2log='tail -f /var/log/apache2/error_log'

# Shows most used commands, cool script I got this from: http://lifehacker.com/software/how-to/turbocharge-your-terminal-274317.php
alias profileme="history | awk '{print \$2}' | awk 'BEGIN{FS=\"|\"}{print \$1}' | sort | uniq -c | sort -n | tail -n 20 | sort -nr"

# git
alias g='git status'
alias ga='git add .'
alias gb='git branch'
alias gba='git branch -a'
alias gc='git commit -v'
alias gca='git commit -v -a'
alias gco='git checkout'
alias gd='gitt diff'
alias gdm='git diff master'
alias gl='git pull'
alias gnp='git-notpushed'
alias gp='git push'
function gg() {
    git commit -v -a -m "$*"
}
# Git clone from GitHub
function gch() {
  git clone git://github.com/$USER/$1.git
}

# sublime
alias s='open -a "Sublime Text 2"'

# MySQL start/stop
alias mysqlstart='mysql.server start'
alias mysqlstart='mysql.server stop'
alias mysqltest='cd /usr/local/Cellar/mysql/5.5.12/mysql-test ; perl mysql-test-run.pl'

# python & django
alias py='python'
alias ds='./manage.py runserver'
alias rmpyc='find . -name "*.pyc" -exec rm -rf {} \;'

# (mt) specific
alias dev03='ssh -A dpeters@dev03.mtsvc.net'
alias dev04='ssh -A dpeters@dev04.mtsvc.net'
alias dev05='ssh -A dpeters@dev05.mtsvc.net'
alias dev06='ssh -A dpeters@dev06.mtsvc.net'
alias dev07='ssh -A dpeters@dev07.mtsvc.net'
alias gproj='git project'
alias gprojs='git-project-subtree'
alias mtups=dev_load

