#!/usr/bin/env bash

# git
rm ~/.gitconfig
rm ~/.gitignore
ln -s ~/Projects/dotfiles/gitconfig ~/.gitconfig
ln -s ~/Projects/dotfiles/gitignore ~/.gitignore

# shell
rm ~/.bash_aliases
rm ~/.profile
ln -s ~/Projects/dotfiles/aliases ~/.bash_aliases
ln -s ~/Projects/dotfiles/profile ~/.profile

source ~/.bashrc
source ~/.profile
echo ':: success ::'
